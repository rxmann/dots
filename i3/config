set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
# Hyprland: ALT+[1-0] to switch
bindsym $lessMod+1 workspace number $ws1
bindsym $lessMod+2 workspace number $ws2
bindsym $lessMod+3 workspace number $ws3
bindsym $lessMod+4 workspace number $ws4
bindsym $lessMod+5 workspace number $ws5
bindsym $lessMod+6 workspace number $ws6
bindsym $lessMod+7 workspace number $ws7
bindsym $lessMod+8 workspace number $ws8
bindsym $lessMod+9 workspace number $ws9
bindsym $lessMod+0 workspace number $ws10

# move focused container to workspace
# Hyprland: SUPER+SHIFT+[1-0] to move
bindsym $mainMod+Shift+1 move container to workspace number $ws1
bindsym $mainMod+Shift+2 move container to workspace number $ws2
bindsym $mainMod+Shift+3 move container to workspace number $ws3
bindsym $mainMod+Shift+4 move container to workspace number $ws4
bindsym $mainMod+Shift+5 move container to workspace number $ws5
bindsym $mainMod+Shift+6 move container to workspace number $ws6
bindsym $mainMod+Shift+7 move container to workspace number $ws7
bindsym $mainMod+Shift+8 move container to workspace number $ws8
bindsym $mainMod+Shift+9 move container to workspace number $ws9
bindsym $mainMod+Shift+0 move container to workspace number $ws10

# workspace navigation
bindsym $mainMod+Left workspace next
bindsym $mainMod+Right workspace prev

# reload the configuration file
bindsym $mainMod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mainMod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mainMod+Shift+M exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mainMod+r mode "default"
}

bindsym $mainMod+r mode "resize"

# // remove topbar from all windows
for_window [class=".*"] border none

# workspace switch
bindsym $lessMod+Tab workspace back_and_forth

# wallpaper
exec_always --no-startup-id feh --bg-scale ~/Downloads/solo.jpg

# mouse
exec_always --no-startup-id xinput --set-prop 12 "libinput Accel Speed" 0
exec_always --no-startup-id xinput --set-prop 12 "libinput Accel Profile Enabled" 0, 1

# screenshots
# Windows + Shift + S → region screenshot (like in Windows)
bindsym $mainMod+Shift+S exec --no-startup-id flameshot gui

# PrintScreen → full screen screenshot
bindsym Print exec --no-startup-id flameshot full -p ~/Pictures

# Shift + PrintScreen → active window screenshot (simulate with region click)
bindsym Shift+Print exec --no-startup-id flameshot gui --region

# Gaps configuration 
set $innerGap 2
set $outerGap 4 
gaps inner $innerGap
gaps outer $outerGap

# Optional: remove outer gaps when only one window
smart_gaps off

# Increase/Decrease gaps
bindsym $lessMod+minus gaps outer current plus 5
bindsym $lessMod+equal gaps outer current minus 5

# Reset gaps
bindsym $lessMod+Shift+plus gaps inner all set $innerGap; gaps outer all set $outerGap

exec_always --no-startup-id sh -c "pkill polybar; polybar example &"

